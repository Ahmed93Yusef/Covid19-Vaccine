<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.motion.widget.MotionLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ECF6FF"
    app:layoutDescription="@xml/fragment_about_scene"
    tools:context=".ui.fragment.AboutFragment">


    <androidx.cardview.widget.CardView
        android:id="@+id/card_one"
        android:layout_width="0dp"
        android:layout_height="220dp"
        android:layout_margin="8dp"
        app:cardBackgroundColor="#ECF6FF"
        app:cardCornerRadius="40dp"
        app:cardElevation="12dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:background="@drawable/bg_about"
            android:elevation="12dp"
            android:padding="5dp">

            <!--            <ImageView-->
            <!--                android:layout_width="100dp"-->
            <!--                android:layout_height="100dp"-->
            <!--                android:elevation="16dp"-->
            <!--                android:src="@drawable/get_vaccinated"-->
            <!--                app:layout_constraintRight_toRightOf="parent"-->
            <!--                app:layout_constraintTop_toTopOf="parent" />-->

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:elevation="16dp"
                android:fontFamily="@font/kalambold"
                android:padding="14dp"
                android:text="let's vaccine"
                android:textColor="#82C5FF"
                android:textSize="25sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>


    <LinearLayout
        android:id="@+id/linear_layout"
        android:layout_width="match_parent"
        android:layout_height="1000dp"
        android:background="#ECF6FF"
        android:orientation="vertical"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/card_two">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="serif"
            android:padding="10dp"
            android:text="Information about the application"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="serif"
            android:padding="8dp"
            android:text="An application designed and developed by a group of beginners in application development that provides a set of services such as information on vaccines and statistics on vaccinators in many countries and many other services." />

    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/card_two"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_margin="2dp"
        app:cardBackgroundColor="#A5D5FF"
        app:cardElevation="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:elevation="12dp">

            <TextView
                android:id="@+id/card_text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:elevation="12dp"
                android:fontFamily="serif"
                android:padding="5dp"
                android:text="To contact us click on the icon."
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/member1"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/github"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/member2"
                app:layout_constraintTop_toBottomOf="@id/card_text1" />

            <TextView
                android:id="@+id/member1_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="serif"
                android:text="Ahmed"
                android:textSize="10sp"
                app:layout_constraintEnd_toEndOf="@+id/member1"
                app:layout_constraintStart_toStartOf="@+id/member1"
                app:layout_constraintTop_toBottomOf="@id/member1" />

            <ImageView
                android:id="@+id/member2"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/github"
                app:layout_constraintLeft_toRightOf="@id/member1"
                app:layout_constraintRight_toLeftOf="@id/member3"
                app:layout_constraintTop_toBottomOf="@id/card_text1" />

            <TextView
                android:id="@+id/member2_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="serif"
                android:text="Nooralden"
                android:textSize="10sp"
                app:layout_constraintEnd_toEndOf="@+id/member2"
                app:layout_constraintStart_toStartOf="@+id/member2"
                app:layout_constraintTop_toBottomOf="@id/member2" />


            <ImageView
                android:id="@+id/member3"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/github"
                app:layout_constraintLeft_toRightOf="@id/member2"
                app:layout_constraintRight_toLeftOf="@id/member4"
                app:layout_constraintTop_toBottomOf="@id/card_text1" />

            <TextView
                android:id="@+id/member3_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="serif"
                android:text="Nofel"
                android:textSize="10sp"
                app:layout_constraintEnd_toEndOf="@+id/member3"
                app:layout_constraintStart_toStartOf="@+id/member3"
                app:layout_constraintTop_toBottomOf="@id/member3" />


            <ImageView
                android:id="@+id/member4"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/github"
                app:layout_constraintLeft_toRightOf="@id/member3"
                app:layout_constraintRight_toLeftOf="@id/member5"
                app:layout_constraintTop_toBottomOf="@id/card_text1" />

            <TextView
                android:id="@+id/member4_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="serif"
                android:text="Huda"
                android:textSize="10sp"
                app:layout_constraintEnd_toEndOf="@+id/member4"
                app:layout_constraintStart_toStartOf="@+id/member4"
                app:layout_constraintTop_toBottomOf="@id/member4" />

            <ImageView
                android:id="@+id/member5"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/github"
                app:layout_constraintLeft_toRightOf="@id/member4"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/card_text1" />

            <TextView
                android:id="@+id/member5_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:elevation="12dp"
                android:fontFamily="serif"
                android:text="Anwar"
                android:textSize="10sp"
                app:layout_constraintEnd_toEndOf="@+id/member5"
                app:layout_constraintStart_toStartOf="@+id/member5"
                app:layout_constraintTop_toBottomOf="@id/member5" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.motion.widget.MotionLayout>
