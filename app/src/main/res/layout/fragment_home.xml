<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#03A9F4"
    tools:context=".ui.fragment.HomeFragment">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="380dp"
        android:layout_height="220dp"
        android:elevation="8dp"
        android:layout_margin="8dp"
        app:cardCornerRadius="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <ViewFlipper
            android:id="@+id/viewFlipper"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </androidx.cardview.widget.CardView>
    <TextView
        android:id="@+id/services"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="@string/services"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:fontFamily="@font/frankruhllibremedium"
        app:layout_constraintTop_toBottomOf="@id/cardView"
        app:layout_constraintStart_toStartOf="@id/cardView" />
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/vaccineRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintTop_toBottomOf="@id/services"
        app:layout_constraintStart_toStartOf="@id/cardView"
        app:layout_constraintEnd_toEndOf="@id/cardView"
        app:layout_constraintBottom_toTopOf="@id/layoutStatictec"
        tools:listitem="@layout/recycler_view_layout"
        android:orientation="horizontal" />
    <LinearLayout
        android:id="@+id/layoutStatictec"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="4dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/vaccineRecyclerView"
        app:layout_constraintEnd_toEndOf="@id/vaccineRecyclerView"
        app:layout_constraintTop_toBottomOf="@id/vaccineRecyclerView">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/iraq_statistics"
            android:textSize="25sp"
            android:layout_marginStart="16dp"
            android:fontFamily="@font/lorabold" />
        <TextView
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:text="@string/this_statistics_shown"
            android:lines="2"
            android:textStyle="bold"
            android:fontFamily="@font/frankruhllibrelight"
            android:letterSpacing="0.01"
            android:layout_marginStart="16dp"
            android:textSize="16sp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:gravity="center"
            android:orientation="horizontal">
            <androidx.cardview.widget.CardView
                android:layout_width="190dp"
                android:layout_height="match_parent"
                app:cardElevation="8dp"
                android:onClick="showDescription"
                android:background="@drawable/shapestatictic"
                app:cardCornerRadius="6dp">
                <TextView
                    android:id="@+id/homeScreenDaily"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="843"
                    android:textStyle="bold"
                    android:fontFamily="@font/frankruhllibremedium"
                    android:textSize="35sp"
                    android:gravity="start"
                    android:layout_margin="16dp" />

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="190dp"
                android:layout_height="120dp"
                app:cardElevation="8dp"
                android:onClick="showVaccienTypr"
                android:layout_marginStart="4dp"
                app:cardCornerRadius="8dp">
                <TextView
                    android:id="@+id/homeScreenTotal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="843"
                    android:textStyle="bold"
                    android:fontFamily="@font/frankruhllibremedium"
                    android:textSize="35sp"
                    android:gravity="start"
                    android:layout_margin="16dp"
                    />

            </androidx.cardview.widget.CardView>









        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
