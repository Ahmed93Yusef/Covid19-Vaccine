<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/purple_300"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.cardview.widget.CardView
        android:id="@+id/my_Card_View"
        android:layout_width="370dp"
        android:layout_height="160dp"
        app:cardCornerRadius="16dp"
        android:elevation="1dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/on"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textBenefit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:fontFamily="@font/loraregular"
                android:text="@string/shoudTakeVaccien"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@id/imageView"
                app:layout_constraintStart_toStartOf="@id/imageView"
                app:layout_constraintTop_toTopOf="@id/imageView"
                app:layout_constraintVertical_bias="0.31" />

            <TextView
                android:id="@+id/textAdviced"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:lines="3"
                android:fontFamily="@font/loraregular"
                android:textStyle="bold"
                android:text="@string/banifit_of_vaccin"
                android:textAlignment="viewStart"
                android:textSize="@dimen/small9Size"
                app:layout_constraintBottom_toBottomOf="@id/imageView"
                app:layout_constraintStart_toStartOf="@id/textBenefit"
                app:layout_constraintTop_toBottomOf="@id/textBenefit"
                app:layout_constraintVertical_bias="0.10"
                />

            <Button
                android:id="@+id/buttonDetails"
                android:layout_width="85dp"
                android:layout_height="35dp"
                android:backgroundTint="@color/colorButton"
                android:ellipsize="none"
                android:longClickable="true"
                android:text="@string/more_details"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textDirection="firstStrongRtl"
                android:textSize="6dp"
                android:onClick="button_Details"
                app:layout_constraintBottom_toBottomOf="@id/imageView"
                app:layout_constraintEnd_toEndOf="@id/textAdviced"
                app:layout_constraintHorizontal_bias="0.2"
                app:layout_constraintStart_toStartOf="@id/textAdviced"
                app:layout_constraintTop_toBottomOf="@id/textAdviced" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
    <TextView
        android:id="@+id/antiText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:textStyle="bold"
        android:fontFamily="@font/loraregular"
        android:text="@string/anti_vaccines_covid_19"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textSize="@dimen/textMain"
        app:layout_constraintStart_toStartOf="@id/my_Card_View"
        app:layout_constraintTop_toBottomOf="@id/my_Card_View" />

    <TextView
        android:id="@+id/detailsOFVaccine"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:lines="2"
        android:textStyle="bold"
        android:fontFamily="@font/loraregular"
        android:text="@string/detailsOFVaccine"
        android:textAlignment="viewStart"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        android:textSize="@dimen/small9Size"
        app:layout_constraintStart_toStartOf="@+id/antiText"
        app:layout_constraintTop_toBottomOf="@+id/antiText" />

    <androidx.recyclerview.widget.RecyclerView
        tools:listitem="@layout/recycler_view_layout"
        android:id="@+id/recycler_Vaccine"
        android:layout_width="0dp"
        android:layout_marginTop="16dp"
        android:layout_height="120dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/detailsOFVaccine"
        />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardLift"
        android:layout_width="180dp"
        android:layout_height="120dp"
        android:layout_marginTop="12dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:cardCornerRadius="16dp"
        android:elevation="8dp"
        app:layout_constraintEnd_toStartOf="@id/cardRight"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/recycler_Vaccine">
        <com.airbnb.lottie.LottieAnimationView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:lottie_autoPlay="true"
            />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardRight"
        android:layout_width="180dp"
        android:layout_height="120dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="12dp"
        app:cardCornerRadius="16dp"
        android:elevation="8dp"
        app:layout_constraintTop_toTopOf="@id/cardLift"
        app:layout_constraintBottom_toBottomOf="@id/cardLift"
        app:layout_constraintStart_toEndOf="@id/cardLift"
        app:layout_constraintEnd_toEndOf="parent">
        <com.airbnb.lottie.LottieAnimationView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:lottie_autoPlay="true"
            />
    </androidx.cardview.widget.CardView>

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginTop="8dp"
        android:scrollbars="horizontal"
        app:layout_constraintTop_toBottomOf="@id/cardRight"
        app:layout_constraintEnd_toEndOf="@id/cardRight"
        app:layout_constraintStart_toStartOf="@id/cardLift">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <androidx.cardview.widget.CardView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_gravity="center_vertical"
                app:cardCornerRadius="16dp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:elevation="8dp"
                >
                <com.airbnb.lottie.LottieAnimationView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:lottie_rawRes="@raw/contacts"
                    app:lottie_autoPlay="true"
                    />




            </androidx.cardview.widget.CardView>



            <androidx.cardview.widget.CardView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_gravity="center_vertical"
                app:cardCornerRadius="16dp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:elevation="8dp"
                >
                <com.airbnb.lottie.LottieAnimationView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:lottie_autoPlay="true"
                    app:lottie_rawRes="@raw/iconwashhands"

                    />

            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_gravity="center_vertical"
                app:cardCornerRadius="16dp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:elevation="8dp"
                >

                <com.airbnb.lottie.LottieAnimationView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:lottie_autoPlay="true"
                    app:lottie_rawRes="@raw/crowdplaces"

                    />

            </androidx.cardview.widget.CardView>



            <androidx.cardview.widget.CardView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_gravity="center_vertical"
                app:cardCornerRadius="16dp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:elevation="8dp"
                >

                <com.airbnb.lottie.LottieAnimationView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:lottie_rawRes="@raw/sorethroat"
                    app:lottie_autoPlay="true"
                    />

            </androidx.cardview.widget.CardView>



            <androidx.cardview.widget.CardView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_gravity="center_vertical"
                app:cardCornerRadius="16dp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:elevation="8dp"
                >

                <com.airbnb.lottie.LottieAnimationView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:lottie_autoPlay="true"
                    app:lottie_rawRes="@raw/avoidhandshakes"

                    />

            </androidx.cardview.widget.CardView>



            <androidx.cardview.widget.CardView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_gravity="center_vertical"
                app:cardCornerRadius="16dp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:elevation="8dp"
                >
                <com.airbnb.lottie.LottieAnimationView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:lottie_autoPlay="true"
                    />

            </androidx.cardview.widget.CardView>


        </LinearLayout>
    </HorizontalScrollView>








</androidx.constraintlayout.widget.ConstraintLayout>
